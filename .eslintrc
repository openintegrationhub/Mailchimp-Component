{
  "rules": {
    "no-console": "off",
    "max-len":  ["error", { "code": 150 }],
    "no-param-reassign": "off",
    "no-use-before-define": "off",
    "no-unused-vars": "off",
    "no-restricted-syntax": "off"
    },
  "env": {
      es6: true,
      node: true,
      mocha: true
  },
  "plugins": [
      "json",
      "mocha"
  ],
  "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
  },
  "extends": "airbnb-base"
}
